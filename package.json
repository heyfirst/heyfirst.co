{
  "name": "heyfirst-co",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "commit": "cz",
    "dev": "next dev",
    "build": "next build",
    "postbuild": "node --experimental-modules ./scripts/generate-rss.mjs && node ./scripts/generate-sitemap.mjs",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,mdx,json}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "date-fns": "2.29.3",
    "fathom-client": "3.5.0",
    "feed": "4.2.2",
    "fuse.js": "6.6.2",
    "gray-matter": "4.0.3",
    "mdx-prism": "0.3.4",
    "next": "12.3.1",
    "next-mdx-remote": "4.0.3",
    "prismjs": "1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "3.39.2",
    "reading-time": "1.5.0",
    "rehype": "12.0.1",
    "rehype-slug": "5.0.1",
    "remark-frontmatter": "4.0.1",
    "remark-gfm": "3.0.1",
    "remark-parse": "10.0.1",
    "remark-stringify": "10.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.19.1",
    "@babel/plugin-syntax-flow": "7.18.6",
    "@babel/plugin-transform-react-jsx": "7.19.0",
    "@tailwindcss/typography": "0.5.7",
    "@types/react": "18.0.20",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "autoprefixer": "10.4.11",
    "eslint": "8.20.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "8.5.0",
    "globby": "13.1.2",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.3",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "husky": "8.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "revert",
          "content",
          "chore"
        ]
      ]
    }
  }
}
