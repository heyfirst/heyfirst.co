{
  "name": "@heyfirst/monorepo",
  "version": "0.0.1",
  "private": true,
  "author": "First Kanisorn Sutham",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf node_modules .next dist",
    "format:index": "prettier --write \"*.{js,ts,json,md}\"",
    "format:src": "prettier --write",
    "format": "pnpm run format:index && pnpm run format:src",
    "dev": "pnpm run -r --parallel dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "eslint": "8.17.0",
    "husky": "8.0.1",
    "prettier": "2.7.1"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.2.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "revert",
          "content",
          "chore"
        ]
      ]
    }
  }
}
