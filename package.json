{
  "name": "@heyfirst/monorepo",
  "version": "0.0.1",
  "private": true,
  "author": "First Kanisorn Sutham",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "pre-commit": "lint-staged",
    "build": "turbo run build postbuild",
    "build:ci": "turbo run build test lint postbuild",
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf .turbo node_modules .next dist",
    "format:index": "prettier --write \"*.{js,ts,json,md}\"",
    "format:src": "prettier --write",
    "format": "pnpm run format:index && pnpm run format:src",
    "dev": "turbo run dev --parallel",
    "lint": "TIMING=1 eslint --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,md,mdx,json}": [
      "pnpm run format",
      "pnpm run lint"
    ]
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "prettier": "2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@6.28.0"
}
