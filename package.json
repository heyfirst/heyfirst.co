{
  "name": "heyfirst-co",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "commit": "cz",
    "dev": "next dev",
    "build": "next build",
    "postbuild": "node ./scripts/generate-rss.mjs && node ./scripts/generate-sitemap.mjs",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write './**/*.{cjs,mjs,js,jsx,ts,tsx,css,md,mdx,json}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "date-fns": "2.29.3",
    "fathom-client": "3.5.0",
    "fuse.js": "6.6.2",
    "gray-matter": "4.0.3",
    "mdx-prism": "0.3.4",
    "next": "13.0.2",
    "next-mdx-remote": "4.1.0",
    "next-seo": "5.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "3.39.2",
    "reading-time": "1.5.0",
    "rehype-slug": "5.0.1",
    "remark-gfm": "3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@tailwindcss/typography": "0.5.9",
    "@types/react": "18.0.27",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "autoprefixer": "10.4.13",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.6",
    "eslint-config-prettier": "8.6.0",
    "feed": "4.2.2",
    "globby": "13.1.3",
    "husky": "8.0.3",
    "postcss": "8.4.21",
    "postcss-import": "15.1.0",
    "postcss-nested": "6.0.0",
    "prettier": "2.8.3",
    "prettier-plugin-tailwindcss": "0.2.2",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "revert",
          "content",
          "chore"
        ]
      ]
    }
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ]
}
